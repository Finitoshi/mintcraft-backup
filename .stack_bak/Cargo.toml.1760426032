[workspace]
members = [
  "programs/*",
]

[profile.release]
overflow-checks = true
lto = "fat"
codegen-units = 1
opt-level = "s"
panic = "abort"

[patch.crates-io]
# Force all base64ct resolutions to a pre-Edition 2024 release
base64ct = { git = "https://github.com/RustCrypto/formats.git", tag = "base64ct/v1.6.0" }
