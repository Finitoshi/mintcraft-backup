[package]
name        = "mintcraft"
version     = "0.1.0"
description = "Created with Anchor"
edition     = "2021"

[lib]
name       = "mintcraft"
crate-type = ["cdylib", "lib"]

[features]
no-entrypoint   = []
no-idl          = []
no-log-messages = []
cpi             = ["no-entrypoint"]
default         = []
idl-build       = ["anchor-lang/idl-build", "anchor-spl/idl-build"]

[dependencies]
anchor-lang = { version = "0.30.1", default-features = false, features = ["derive","idl-build"] }

[dependencies.anchor-spl]
version          = "0.30.1"
default-features = false
features         = [
    "token"
  , "associated_token"
  , "idl-build"
  , "token_2022"
  , "token_2022_extensions"
  , "token_interface"
]

[dependencies.spl-token]
version  = "4.0.3"
features = ["no-entrypoint"]

[dependencies.spl-token-2022]
version          = "9.0.0"
default-features = false
features         = ["no-entrypoint","test-sbf"]

[dependencies.spl-associated-token-account]
version  = "3.0.4"
features = ["no-entrypoint"]

[dependencies.solana-program]
version = "1.18.17"

[dependencies.solana-sdk]
version = "1.18.17"

[dev-dependencies]
solana-program-test = "1.18.22"
env_logger          = { version = "0.9.3", default-features = false, features = ["regex"] }
termcolor           = { version = "1.4.1", default-features = false }
atty                = "0.2.14"
regex               = "1.10.4"
switchboard-solana  = { version = "0.30.4", default-features = false, features = ["no-entrypoint","cpi"] }
